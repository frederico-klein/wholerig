<!-- -->
<launch>
  <arg name="base" value="$(env ROS_GUMMI_LEFTBASE)" />
  <arg
    name="model" />
  <arg
    name="gui"
    default="True" />
  <param
    name="robot_description"
    textfile="$(eval find('gummi_leftbase_' + base) + '/urdf/gummi_description.urdf')" />
  <param
    name="use_gui"
    value="$(arg gui)" />
  <node
    name="joint_state_publisher"
    pkg="joint_state_publisher"
    type="joint_state_publisher" />
  <node
    name="robot_state_publisher"
    pkg="robot_state_publisher"
    type="state_publisher" />
  <node
    name="rviz"
    pkg="rviz"
    type="rviz"
    args="$(eval '-d' + find('gummi_leftbase_' + base) + '/urdf.rviz')" />
</launch>
